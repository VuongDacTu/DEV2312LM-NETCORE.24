@model Lab03.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h2>Thêm mới sách</h2>

        <form action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title">Tên sách</label>
                <input type="text" asp-for="Title" class="form-control" placeholder="Tên sách" />
            </div>
            <div class="form-group">
                <label asp-for="AthorId">Tác giả</label>
                <select asp-for="AthorId" class="form-control" asp-items="@ViewBag.authors">
                    <option value="">Chọn tác giả</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="GenreId">Thể loại</label>
                <select asp-for="GenreId" class="form-control" asp-items="@ViewBag.genres">
                    <option value="">Chọn thể loại</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Image">Hình ảnh/Poster</label>
                <input type="file" asp-for="Image" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price">Giá sách</label>
                <input type="number" asp-for="Price" class="form-control" placeholder="Giá sách" />
            </div>
            <div class="form-group">
                <label asp-for="TotalPage">Tổng số trang</label>
                <input type="number" asp-for="TotalPage" class="form-control" placeholder="Tổng số trang" />
            </div>
            <div class="form-group">
                <label asp-for="Sumary">Giới thiệu ngắn</label>
                <textarea class="form-control" asp-for="Sumary" placeholder="Nội dung giới thiệu sách..."></textarea>
            </div>
            <button asp-action="Index" type="submit" class="btn btn-primary">Lưu lại</button>
        </form>



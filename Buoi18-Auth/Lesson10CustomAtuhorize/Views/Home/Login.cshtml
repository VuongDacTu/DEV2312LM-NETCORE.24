@model Lesson10CustomAtuhorize.Models.Login
@{
    ViewData["Title"] = "Login";
}

<div class="border p-3">
    <h2>Login Information</h2>
    <form asp-action="Login" asp-controller="Home" method="post">
        <div asp-validation-summary="ModelOnly">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">User Name</label>
            <input class="form-control" id="email" placeholder="" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password"  asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>
